---
import Layout from '../../layouts/Layout.astro';
import { getAllBlogPosts, getBlogPostBySlug } from '../../lib/contentful-api';
import { renderRichText } from '../../lib/rich-text-renderer';
import type { BlogPost } from '../../lib/contentful-types';

export async function getStaticPaths() {
  const posts = await getAllBlogPosts();

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: BlogPost;
}

const { slug } = Astro.params;
const { post } = Astro.props;

// Fallback fetch if props not available (e.g., SSR mode)
const blogPost = post || await getBlogPostBySlug(slug as string);

if (!blogPost) {
  return Astro.redirect('/blog');
}

const contentHtml = renderRichText(blogPost.content);

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title={blogPost.title}>
  <main>
    <article class="container">
      <header>
        <nav class="back-link">
          <a href="/blog">&larr; Back to Blog</a>
        </nav>

        <time datetime={blogPost.publishDate}>
          {formatDate(blogPost.publishDate)}
        </time>

        <h1>{blogPost.title}</h1>

        {blogPost.excerpt && <p class="excerpt">{blogPost.excerpt}</p>}

        <div class="meta">
          {blogPost.author && <span class="author">By {blogPost.author}</span>}
          {blogPost.tags && blogPost.tags.length > 0 && (
            <div class="tags">
              {blogPost.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      {blogPost.featuredImage && (
        <figure class="featured-image">
          <img
            src={blogPost.featuredImage.url}
            alt={blogPost.featuredImage.title}
            width={blogPost.featuredImage.width}
            height={blogPost.featuredImage.height}
          />
        </figure>
      )}

      <div class="content" set:html={contentHtml} />
    </article>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding: 2rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .back-link {
    margin-bottom: 2rem;
  }

  .back-link a {
    color: #666;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .back-link a:hover {
    color: #fff;
  }

  header {
    margin-bottom: 2rem;
  }

  time {
    font-size: 0.875rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0.5rem 0 1rem;
    line-height: 1.2;
  }

  .excerpt {
    font-size: 1.25rem;
    color: #888;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .author {
    font-size: 0.875rem;
    color: #666;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background: #222;
    border-radius: 9999px;
    color: #888;
  }

  .featured-image {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .content {
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .content :global(h2) {
    font-size: 2rem;
    margin: 2rem 0 1rem;
    font-weight: 600;
  }

  .content :global(h3) {
    font-size: 1.5rem;
    margin: 1.5rem 0 0.75rem;
    font-weight: 600;
  }

  .content :global(h4),
  .content :global(h5),
  .content :global(h6) {
    font-size: 1.25rem;
    margin: 1.25rem 0 0.5rem;
    font-weight: 600;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: #ccc;
  }

  .content :global(a) {
    color: #4444ff;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(a:hover) {
    color: #6666ff;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
    color: #ccc;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid #4444ff;
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: #888;
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid #333;
    margin: 2rem 0;
  }

  .content :global(figure) {
    margin: 2rem 0;
  }

  .content :global(figure img) {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .content :global(figcaption) {
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.5rem;
    text-align: center;
  }

  .content :global(code) {
    background: #222;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: #111;
    border: 1px solid #222;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }
</style>
