---
import Header from "../components/Header.svelte";
import { getHeader } from "../lib/contentful-api";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Fetch header data server-side
const header = await getHeader();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro starter with GSAP and Three.js" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load header={header} />
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    background: #fff;
    color: #000;
  }

  body {
    padding-top: 64px; /* Account for fixed header */
  }

  @media (max-width: 640px) {
    body {
      padding-top: 56px;
    }
  }
</style>
